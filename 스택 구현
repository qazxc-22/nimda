#include <stdio.h>

#define MAX 100   // 스택 최대 크기

// 스택 구조체
typedef struct {
    int data[MAX];
    int top;
} Stack;

// 스택 초기화
void init(Stack *s) {
    s->top = -1;
}

// 스택이 비었는지 확인
int isEmpty(Stack *s) {
    return s->top == -1;
}

// 스택이 가득 찼는지 확인
int isFull(Stack *s) {
    return s->top == MAX - 1;
}

// push 함수
void push(Stack *s, int value) {
    if (isFull(s)) {
        printf("스택 오버플로우!\n");
        return;
    }
    s->data[++(s->top)] = value;
}

// pop 함수
int pop(Stack *s) {
    if (isEmpty(s)) {
        printf("스택 언더플로우!\n");
        return -1;
    }
    return s->data[(s->top)--];
}

// top 값 보기 (peek)
int peek(Stack *s) {
    if (isEmpty(s)) {
        printf("스택이 비어 있습니다.\n");
        return -1;
    }
    return s->data[s->top];
}

// main 테스트
int main() {
    Stack s;
    init(&s);

    push(&s, 10);
    push(&s, 20);
    push(&s, 30);

    printf("peek: %d\n", peek(&s));  // 30
    printf("pop: %d\n", pop(&s));    // 30
    printf("pop: %d\n", pop(&s));    // 20
    printf("pop: %d\n", pop(&s));    // 10

    return 0;
}
